{
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 16,
    "editor.guides.indentation": false,
    "editor.cursorStyle": "block",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.bracketPairColorization.enabled": false,
    "editor.matchBrackets": "never", // Disables rainbow brace pairs to allow the theme to colour them
    "editor.renderFinalNewline": "dimmed",
    "editor.renderLineHighlight": "gutter", // Change to "line" for default line highlight

    "outline.showEnums": true,
    "outline.showFunctions": true,
    "outline.showMethods": true,
    "outline.showStructs": true,

    "outline.showArrays": false,
    "outline.showBooleans": false,
    "outline.showClasses": false,
    "outline.showConstants": false,
    "outline.showConstructors": false,
    "outline.showEnumMembers": false,
    "outline.showEvents": false,
    "outline.showFields": false,
    "outline.showFiles": false,
    "outline.showInterfaces": false,
    "outline.showKeys": false,
    "outline.showModules": false,
    "outline.showNamespaces": false,
    "outline.showNull": false,
    "outline.showNumbers": false,
    "outline.showObjects": false,
    "outline.showOperators": false,
    "outline.showPackages": false,
    "outline.showProperties": false,
    "outline.showStrings": false,
    "outline.showTypeParameters": false,
    "outline.showVariables": false,

    "blockhighlight.background": [
        "12",
        "11",
        "93",
        ".2"
    ],

    "bracketLens.color": "#deb8872f",
    "bracketLens.line": "none",
    "bracketLens.mode": "auto",
    "bracketLens.languageConfiguration": {
        "ignoreCase": false,
        "brackets": {
            "symbol": [
                {
                    "opening": "{",
                    "closing": "}",
                    "headerMode": "smart",
                    "inters": []
                }
            ],
        },
    },

    "workbench.colorCustomizations": {
        "focusBorder": "#00000000",
        "panel.border": "#00000000",  
        
        "titleBar.activeBackground": "#090909",
        "titleBar.inactiveBackground": "#161618",
        "titleBar.border": "#090909",
        "titleBar.activeForeground": "#DEB887",
        "titleBar.inactiveForeground": "#755931",

        "editor.background": "#090909",
        "editor.findMatchBackground": "#B700FFA6",
        "editor.findMatchForeground": "#FFFFFFA6",
        "editor.findMatchHighlightBackground": "#B700FFA6",
        "editor.findMatchHighlightForeground": "#FFFFFFA6",
        "editor.wordHighlightBackground": "#00000000",
        "editor.selectionBackground": "#0c0b5d7c",

        "editor.lineHighlightBackground": "#0c0b5d",
        "highlightLogicalLine.background": "#0c0b5da8",
        "editorCursor.foreground": "#36f742",

        "editorHoverWidget.background": "#040430",
        "editorHoverWidget.border": "#040468",
        "editorHoverWidget.foreground": "#DEB887",

        "editorSuggestWidget.background": "#040430",
        "editorSuggestWidget.border": "#040468",
        "editorSuggestWidget.selectedBackground": "#0c0b5d",
        "editorSuggestWidget.foreground": "#755931",
        "editorSuggestWidget.highlightForeground": "#36f742",
        "editorSuggestWidget.selectedIconForeground": "#36f742",

        "list.hoverForeground": "#DEB887",
        "list.activeSelectionBackground": "#0c0b5d",
        "list.inactiveSelectionBackground": "#0c0b5daf",
        "list.activeSelectionForeground": "#DEB887",
        "list.highlightForeground": "#daffdd",
        "list.hoverBackground": "#0c0b5d",

        "tree.indentGuidesStroke": "#DEB887",
        "tree.inactiveIndentGuidesStroke": "#755931",

        "editorLineNumber.activeForeground": "#DEB887",
        "editorLineNumber.dimmedForeground": "#1d1a168c",
        "editorLineNumber.foreground": "#24201b",

        "sideBar.border": "#00000000",
        "sideBar.background": "#090909",
        "sideBar.foreground": "#755931",

        "activityBar.border": "#00000000",
        "activityBar.background": "#090909",
        "activityBar.foreground": "#DEB887",
        "activityBar.inactiveForeground": "#755931",
        "activityBar.activeBorder": "#AF4600",
        "activityBarBadge.background": "#FF8000",
        "activityBarBadge.foreground": "#090909",

        "tab.inactiveBackground": "#090909",
        "tab.inactiveForeground": "#755931",
        "tab.activeBackground": "#0c0b5d",
        "tab.activeForeground": "#8180e9", 
        "tab.hoverBackground": "#0c0b5d73",
        "tab.hoverForeground": "#DEB887",
        "editorGroupHeader.tabsBackground": "#090909",

        "breadcrumb.background": "#090909",
        "breadcrumb.activeSelectionForeground": "#DEB887",
        "breadcrumb.foreground": "#755931",
        "breadcrumb.focusForeground": "#DEB887",

        "menu.background": "#090909",
        "menu.border": "#AF4600",
        "menu.selectionBackground": "#0c0b5d",
        "menu.foreground": "#755931",
        "menu.selectionForeground": "#DEB887",
        "menu.separatorBackground": "#AF4600",

        // Misc
        "icon.foreground": "#DEB887",
        "sideBarTitle.foreground": "#DEB887",

        // Warnings
        "editorWarning.foreground": "#FF8000",
        "editorWarning.background": "#FF800080",
        "list.warningForeground": "#FF8000",

        // Errors
        "editorError.foreground": "#FF0000",
        "editorError.background": "#FF000080",
        "list.errorForeground": "#FF0000",

        // Git
        "gitDecoration.ignoredResourceForeground": "#7D7D7D",
        "gitDecoration.addedResourceForeground": "#6B8E23",
        "gitDecoration.deletedResourceForeground": "#FF0000",

        "editorGutter.addedBackground": "#6B8E23",
        "editorGutter.modifiedBackground": "#0c0b5d",
        "editorGutter.deletedBackground": "#FF0000",
    },
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "type": "#B78611",
            "parameter": "#DEB887",
            "bracket": "#FF00FF",
            "parenthesis": "#FF00FF",
            "curlybrace": "#FF00FF",
            "macro": "#CC8E37",
            "variable": "#DEB887",
        },
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "variable.other.property.cpp",
                "settings": {
                    "foreground": "#DEB88780",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "entity.name.function.cpp",
                "settings": {
                    "foreground": "#AF4600",
                }
            },
            {
                "scope": "storage.type",
                "settings": {
                    "foreground": "#AF4600",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "entity.name.type.struct.cpp",
                "settings": {
                    "foreground": "#AF4600",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "keyword.control.return.cpp",
                "settings": {
                    "foreground": "#6B8E23"
                }
            },
            {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#CDAA7D",
                    "fontStyle": ""
                }
            },
            {
                "scope": "storage.type.built-in.primitive",
                "settings": {
                    "foreground": "#B78611",
                    "fontStyle": ""
                }
            },
            {
                "scope": "comment.line",
                "settings": {
                    "foreground": "#7D7D7D",
                }
            },
            {
                "scope": "comment.block",
                "settings": {
                    "foreground": "#7D7D7D",
                }
            },
            {
                "scope": "comment.line.double-slash.documentation.cpp",
                "settings": {
                    "foreground": "#7D7D7D",
                }
            },
            {
                "scope": "storage.type.class.doxygen.cpp",
                "settings": {
                    "foreground": "#bdb0a5",
                }
            },
            {
                "scope": "string.quoted.single",
                "settings": {
                    "foreground": "#6B8E23",
                }
            },
            {
                "scope": "string.quoted.double",
                "settings": {
                    "foreground": "#6B8E23",
                }
            },
            {
                "scope": "string.quoted.triple",
                "settings": {
                    "foreground": "#6B8E23",
                }
            },
            {
                "scope": "string.quoted.other",
                "settings": {
                    "foreground": "#6B8E23",
                }
            },
            {
                "scope": "constant",
                "settings": {
                    "foreground": "#6B8E23",
                }
            },
            {
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#6B8E23",
                }
            },
            {
                "scope": "keyword.control.return.cpp",
                "settings": {
                    "foreground": "#B78611",
                    "fontStyle": ""
                }
            },
            {
                "scope": "punctuation.separator",
                "settings": {
                    "foreground": "#DEB887",
                }
            },
            {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#DEB887",
                }
            },
            {
                "scope": "keyword.control",
                "settings": {
                    "foreground": "#B78611",
                }
            },
            {
                "scope": "keyword.operator.functionlike.cpp",
                "settings": {
                    "foreground": "#AF4600"
                }
            },
            {
                "scope": "keyword.operator.sizeof.cpp",
                "settings": {
                    "foreground": "#AF4600"
                }
            },
            {
                "scope": "keyword.other.typedef.cpp",
                "settings": {
                    "foreground": "#B78611"
                }
            },
            {
                "scope": "meta.block",
                "settings": {
                    "foreground": "#DEB887",
                }
            },
            {
                "scope": "punctuation",
                "settings": {
                    "foreground": "#DEB887",
                }
            },
            {
                "scope": "punctuation.section.attribute.begin.cpp",
                "settings": {
                    "foreground": "#6b5e4c",
                }
            },
            {
                "scope": "entity.other.attribute.maybe_unused.cpp",
                "settings": {
                    "foreground": "#6b5e4c",
                },
            },
            {
                "scope": "punctuation.section.attribute.end.cpp",
                "settings": {
                    "foreground": "#6b5e4c",
                }
            },
            {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#DEB88780", // Macro parameter declaration
                }
            },
            {
                "scope": "meta.preprocessor.macro.cpp",
                "settings": {
                    "foreground": "#DEB88780", // Macro parameter usage
                }
            },
            {
                "scope": "storage.modifier.specifier.static.cpp",
                "settings": {
                    "foreground": "#FF0000", // Make this red because the ~ONLY~ time static should be used is when #defining it under different aliases
                }
            },
            {
                "scope": "storage.modifier.specifier.const.cpp",
                "settings": {
                    "foreground": "#B78611",
                }
            },
            // Operators
            {
                "scope": "keyword.operator.assignment.cpp",
                "settings": {
                    "foreground": "#d97a73",
                }
            },
            {
                "scope": "keyword.operator.comparison.cpp",
                "settings": {
                    "foreground": "#d97a73",
                }
            },
            {
                "scope": "punctuation.separator.pointer-access.cpp", // '->'
                "settings": {
                    "foreground": "#d97a73",
                }
            },
            {
                "scope": "keyword.operator.arithmetic.cpp", // '+', '-', '*', '/', etc
                "settings": {
                    "foreground": "#d97a73",
                }
            },
            {
                "scope": "keyword.operator.bitwise", // '&', '|', etc
                "settings": {
                    "foreground": "#d97a73",
                }
            },
            {
                "scope": "keyword.operator.increment.cpp", // '++';
                "settings": {
                    "foreground": "#d97a73",
                }
            },
            {
                "scope": "keyword.operator.decrement.cpp", // '--'
                "settings": {
                    "foreground": "#d97a73",
                }
            },

            //
            // JSON
            //
            {
                "scope": "support.type.property-name.json.comments",
                "settings": {
                    "foreground": "#6B8E23",
                }
            },
            {
                "scope": "punctuation.definition.dictionary.begin.json.comments",
                "settings": {
                    "foreground": "#DEB887",
                }
            },
            {
                "scope": "punctuation.definition.dictionary.end.json.comments",
                "settings": {
                    "foreground": "#DEB887",
                }
            }
        ]
    },

    "todo-tree.general.tags": [
        "TODO",
        "NOTE",
    ],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "checklist",
            "foreground": "#ff0000",
            "background": "#ff000027",
            "iconColour": "#ff0000",
            "borderRadius": "0",
            "type": "text",
            "textDecoration": "underline"
        },
        "NOTE": {
            "icon": "note",
            "foreground": "#00ff00",
            "background": "#00ff0027",
            "iconColour": "#00ff00",
            "borderRadius": "0",
            "type": "text",
            "textDecoration": "underline"
        },
    },
}
